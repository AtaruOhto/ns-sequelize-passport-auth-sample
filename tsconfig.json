{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "rootDir": "server",
        "sourceMap": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "baseUrl": "./server",
        "lib": ["es6","dom", "es2015.promise", "es5"],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "*"
            ]
        }
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/*.spec.ts"
    ]
}
